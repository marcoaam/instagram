<% if @tag.posts.any? %>
<ul class="tags">
	<% @tag.posts.each do |post| %>
	<li class="post">
		<% if post.picture? %>
		<%= image_tag post.picture.url(:medium), class: 'uploaded_pic' %><br>
		<% end %>
		<%= post.title %>
		<% post.tags.each do |tag| %>
			<%= link_to(tag.text, tag_path(tag) ) %>
		<% end %>
	</li>
	<% end %>
</ul>
<% end %>